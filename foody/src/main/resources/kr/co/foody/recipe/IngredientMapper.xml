<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.recipe.recipe.IngredientMapper">
	
	<select id="large_cate" parameterType="int" resultType ="string">
		SELECT distinct name FROM ingre
		where large_cate = #{large_cate}
	</select>
	
	<select id="detail_cate" parameterType="string" resultType ="kr.co.recipe.recipe.IngredientVO">
		select * from ingre
		where name= #{detail_cate}
	</select>
	
	<select id="nameSearch" resultType ="kr.co.recipe.recipe.IngredientVO">
		select * from ingre
	</select>
	
</mapper>